.gems-stats-table {
  width: 100%;
  border-collapse: collapse;

  &__header {
    border-bottom: 1px solid $layoutBorderColor;
  }

  &__row {
    border-bottom: 1px solid $layoutSecondaryBorderColor;

    &:last-child {
      border-bottom: none;
    }

    &:hover {
      .gems-stats-table__info-icon {
        opacity: 0;
      }

      .gems-stats-table__cell {
        background-color: color($layoutSecondaryBg lightness(+2%));
      }
    }
  }

  &__cell {
    padding: 12px calc($layoutFactor * 1px);
    font-size: 14px;
    line-height: 19px;
    text-align: left;
    color: $textColorPrimary;
    transition: background-color 0.15s ease-out;

    &_header {
      font-weight: 700;
    }

    &_row-title {
      font-weight: 600;
    }

    &_row-value {
      text-align: right;

      @mixin columns 2;

      @media (--desktop) {
        @mixin columns 1;
      }

      @media (--tablet) {
        width: auto;
      }
    }

    &_row-value-small {
      text-align: right;

      @mixin columns 1.5;
    }

    &_row-value:not(:last-child),
    &_row-value-small:not(:last-child), {
      padding-right: 0;
    }

    &_no-vpadding {
      padding-top: 0;
      padding-bottom: 0;
    }
  }

  &__info-icon&__info-icon {
    margin: -2px 0 0 5px;
    color: #b1b5b8;
    transition: opacity 0.15s ease-out;

    @media (--desktop) {
      display: none;
    }

    @media (--tablet) {
      width: auto;
    }
  }
}
